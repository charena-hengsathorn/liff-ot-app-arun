{
  "kind": "collectionType",
  "collectionName": "attendances",
  "info": {
    "singularName": "attendance",
    "pluralName": "attendances",
    "displayName": "Attendance",
    "description": "Track driver attendance and OT records"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "driver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::driver.driver",
      "required": true
    },
    "driverName": {
      "type": "string",
      "required": false
    },
    "thaiDate": {
      "type": "date",
      "required": true
    },
    "clockIn": {
      "type": "time"
    },
    "clockOut": {
      "type": "time"
    },
    "otStart": {
      "type": "time"
    },
    "otEnd": {
      "type": "time"
    },
    "otHours": {
      "type": "decimal"
    },
    "comments": {
      "type": "text"
    },
    "submittedAt": {
      "type": "datetime"
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}

